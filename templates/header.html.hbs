<header>
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <nav id="nav-default" class="navbar navbar-expand-lg navbar-dark">
          <div class="navbar-collapse" id="navbar-content">
            <ul class="navbar-nav me-auto">
              {{#each collections.navbar.links}}
              {{#with (object a=(normalize-path path) b=(normalize-path @root.attributes.docfile)) as | path |}}
              <li class="nav-item">
                <a class="{{#if (equals path.a path.b )~}} active {{~/if}}" href="{{> nav-ref path=path.a}}">
                  {{../name}}
                </a>
              </li>
              {{/with}}
              {{/each}}
            </ul>
            <ul class="navbar-nav ms-auto">
              <li class="nav-item">
                <a href="https://de-de.facebook.com/eleven.kaffeebar.pirna">
                  <span class="fab fa-facebook"></span> Unsere Facebook-Seite
                </a>
              </li>
            </ul>
          </div>
        </nav>
      </div>
    </div>
  </div>
</header>
